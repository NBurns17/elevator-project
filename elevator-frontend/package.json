{
  "name": "elevator-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "electron": "electron .",
    "build": "vite build",
    "preview": "vite preview",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.example.elevator-frontend",
    "productName": "elevator-frontend",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "extraResources": {
      "from": "dist/",
      "to": "app/dist/"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "category": "Utility",
      "icon": "build/icons"
    }
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "vite": "^7.2.4",
    "electron": "^39.2.4"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "electron-is-dev": "^3.0.1"
  }
}
